process {

    errorStrategy = 'terminate'

    withName: prokka {
        container = 'metashot/prokka:1.14.5-3'
        cpus = check_max(4, params.max_cpus)
        memory = { check_max(2.GB * (2**(task.attempt-1)), params.max_memory) }
        time = params.max_time
        errorStrategy = 'retry'
        maxRetries = 3
    }

    withName: roary {
        container = 'metashot/roary:3.12.0-2'
        cpus = { check_max(8, params.max_cpus) }
        memory = { check_max(16.GB * (2**(task.attempt-1)), params.max_memory) }
        time = params.max_time
        errorStrategy = 'retry'
        maxRetries = 3
    }

    withName: raxml {
        container = 'metashot/gubbins:2.4.1-1'
        cpus = { check_max(8, params.max_cpus) }
        memory = { check_max(16.GB * (2**(task.attempt-1)), params.max_memory) }
        time = params.max_time
        errorStrategy = 'retry'
        maxRetries = 3
    }

    withName: roary_plots {
        container = 'metashot/roary:3.12.0-2'
        cpus = { check_max(8, params.max_cpus) }
        memory = { check_max(8.GB * task.attempt, params.max_memory) }
        time = params.max_time
        errorStrategy = 'retry'
        maxRetries = 3
    }
}
